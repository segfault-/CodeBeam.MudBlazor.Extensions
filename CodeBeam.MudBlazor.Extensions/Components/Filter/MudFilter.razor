@namespace MudExtensions
@using MudExtensions.Enums;
@inherits MudComponentBase
@typeparam T

<div class="@ClassName" style="@StyleString">
    <CascadingValue Value="this" IsFixed="true">
        @FilterTemplate
    </CascadingValue>
    <CompoundPredicateComponent @key="this" 
        T="T" 
        IsFirstElement="true" 
        CompoundPredicate="@FilterRoot" 
        Filter="this" 
        Depth="0" 
        CompoundPredicateComponentChanged="CompileExpressionAsync" 
        DisplayParentOperator="false"/>
</div>


