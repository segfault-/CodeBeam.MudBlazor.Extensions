@namespace MudExtensions
@using System.Linq.Expressions;
@inherits MudComponentBase
@typeparam T

<div class="@ClassName" style="@StyleString">

    <MudPaper Class="ma-8 pa-4">
        <MudStack Row="true">
            <PropertySelectComponent T="T" AtomicPredicate="@AtomicPredicate" />
            @if (AtomicPredicate.PropertyExpression is not null)
            {
                <CascadingValue Value="@Filter" IsFixed="true">
                    <OperatorSelectComponent AtomicPredicate="@AtomicPredicate" />
                </CascadingValue>
            }
            @if (!string.IsNullOrWhiteSpace(AtomicPredicate.Operator))
            {
                <ValueFieldComponent AtomicPredicate="@AtomicPredicate" />
            }
        </MudStack>
    </MudPaper>
</div>