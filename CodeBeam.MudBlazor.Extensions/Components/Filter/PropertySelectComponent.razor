@namespace MudExtensions
@using System.Linq.Expressions;
@using MudExtensions.Enums;
@inherits MudComponentBase
@typeparam TItem

<div class="@ClassName" style="@StyleString">
    <MudSelectExtended MultiSelection="false"
                       ItemCollection="Filter?.Properties"
                       @bind-Value="Property"
                       @bind-Value:after="OnPropertyChangedAsync"
                       ValuePresenter="ValuePresenter.ItemContent"
                       SearchBox="true"
                       SearchBoxAutoFocus="false"
                       T="Property<TItem>"
                       AnchorOrigin="Origin.BottomCenter"
                       Variant="Variant.Outlined"
                       SearchBoxClearable="true"
                       Dense="true"
                       Margin="Margin.Dense">
        <ItemTemplate>
            <MudTextM3 TypeStyle="Enums.TypeStyle.Body" TypeSize="Enums.TypeSize.Large">@context.Value.ComputedTitle</MudTextM3>
        </ItemTemplate>
    </MudSelectExtended>
</div>