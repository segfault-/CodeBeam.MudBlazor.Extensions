@namespace MudExtensions
@inherits MudComponentBase

@if (LogicalOperatorComponentTemplate is not null)
{
    @LogicalOperatorComponentTemplate
}
else
{
    @if (IsCompoundPredicate)
    {
        <LogicalOperatorTemplate Depth="Depth" ParentLogicalOperator="ParentLogicalOperator" TextContentCondition="(int i) => i == (Depth - 1)" />
    }

    @if (IsAtomicPredicate && !IsFirstElement)
    {
        <LogicalOperatorTemplate Depth="Depth" ParentLogicalOperator="ParentLogicalOperator" TextContentCondition="(int i) => Depth == 0 || i == Depth" />
    }
}