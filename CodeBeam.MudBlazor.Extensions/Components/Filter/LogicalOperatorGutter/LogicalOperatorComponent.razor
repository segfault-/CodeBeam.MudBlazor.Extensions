@namespace MudExtensions
@inherits MudComponentBase
@typeparam T

@if (IsCompoundPredicate)
{
    @for (int i = 0; i <= Depth; i++)
    {
        int j = i;
        string textContent = string.Empty;

        if(j == (Depth -1))
        {
            textContent = $"{ParentLogicalOperator}";   
        }
        
        if (Depth != 0 && !string.IsNullOrWhiteSpace(textContent))
        {
            <MudTextM3 Class="mud-logical-operator">@textContent</MudTextM3>
        } 
        else if(Depth != 0 && j != Depth)
        {
            <div class="mud-logical-operator" />
        }
    }
}



@if(IsAtomicPredicate && !IsFirstElement)
{
    @for (int i = 0; i <= Depth; i++)
    {
        int j = i;
        string textContent = string.Empty;

        if(Depth == 0)
        {
            textContent = $"{ParentLogicalOperator}";
        }
        else if (j == Depth)
        {
            textContent = $"{ParentLogicalOperator}";
        }

        if (!string.IsNullOrWhiteSpace(textContent))
        {
            <MudTextM3 Class="mud-logical-operator">@textContent</MudTextM3>
        }
        else if (Depth != 0 && j != Depth)
        {
            <div class="mud-logical-operator"/>
        }
    }   
}